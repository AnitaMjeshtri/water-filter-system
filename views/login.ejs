<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Log in</title>
    <link rel="stylesheet" href="../public/css/styles.css" type="text/css">
    <script>
        function validateInput() {
            var userInput = document.getElementById("userInput").value;
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            var phoneRegex = /^\+355\d{8}$/; // Phone number starts with +355 and has 8 digits after that

            // Check if the input matches the email regex or phone number regex
            if (emailRegex.test(userInput) || phoneRegex.test(userInput)) {
            } else {
                alert("Please enter a valid email address or phone number.");
            }
        }
    </script>
    <script>
        function myfunction(){
            var show = document.getElementById('show');
            if (show.type== 'password'){
                show.type='text';
            }
            else{
                show.type='password';
            }
        }
    </script>
</head>
<body>
<p id="letters" >Log in</p>
<p class="background"></p>
<div class="frame1"></div>
<form action="/login" method="post" onsubmit="return validateInput();" class="rectangle">
    <p>
        <label for="userInput"></label>
        <input type="text" id="userInput" name="username" placeholder="Phone number or email" required >
    </p>
    <p>
        <label for=""></label>
        <input type="password" id="show" name="password" required placeholder="Password"> <br>
        <input type="checkbox" name="" onclick="myfunction()"id="">
        <label for="">Show Password</label>
    </p>
    <p style="padding-bottom: 50px; padding-top: 20px;">
        <input type="submit" id="button" value="Log in">
        <br>
        <a href="/auth/google" role="button">
            Sign In with Google
        </a>
    </p>
    <p
            id=button">Forgotten your log in details?<a href="exercises.html" target="_blank">Get help with signing in.</a>
    </p>
    <p style="text-align: left; margin-left: -340px; margin-top: -120px; z-index: 6; color: white;">Don't have an account?</p>
    <a href="signup.ejs" style="text-align: left; margin-left: -340px; margin-top: -120px;z-index: 6;color: white;"> Sign up</a>
</form>
<div class="frame2"></div>
</body>
</html>